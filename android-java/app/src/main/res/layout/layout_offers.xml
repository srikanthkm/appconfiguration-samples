<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#f5f5f5"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rel_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_regular">

        <ImageView
            android:id="@+id/icon_offer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/ic_offer"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/text_offer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_toRightOf="@+id/icon_offer"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Offer Value"
            android:textColor="@color/submit_button"
            android:textSize="@dimen/text_size_regular" />

        <TextView
            android:id="@+id/text_offer_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_offer_value"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toRightOf="@+id/icon_offer"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Valid till March 2021, on all routes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>